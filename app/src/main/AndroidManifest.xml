<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs2340.shoppingwithfriends" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registration"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Registration" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MainScreen" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Friends"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Friends" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddFriend"
            android:label="@string/title_activity_add_friend" >
        </activity>
        <activity
            android:name=".FriendDetail"
            android:label="@string/friend_detail" >
            <intent-filter>
                <action android:name="android.intent.action.FriendDetail"/>
                <category android:name="android.intent.action.DEFAULT" />
            </intent-filter>
            </activity>
        <activity android:name=".AddItem"
            android:label="Add Item">
            <intent-filter>
                <action android:name="android.intent.action.AddItem"/>
                <category android:name="android.intent.action.DEFAULT" />
            </intent-filter>
            </activity>
        <activity android:name=".ItemList_Personal"
            android:label="Items List">
            <intent-filter>
                <action android:name="android.intent.action.ItemList_Personal"/>
                <category android:name="android.intent.action.DEFAULT"/>
            </intent-filter>
            </activity>
        <activity android:name=".ItemDetail_Personal"
            android:label="Item Details">
            <intent-filter>
                <action android:name="android.intent.action.ItemDetail_Personal"/>
                <category android:name="android.intent.action.DEFAULT"/>
            </intent-filter>
            </activity>
        <activity android:name=".ItemList_Friend"
            android:label="Items List (Friend)">
            <intent-filter>
                <action android:name="android.intent.action.ItemList_Friend"/>
                <category android:name="android.intent.action.DEFAULT"/>
            </intent-filter>
            </activity>
        <activity android:name=".ItemDetail_Friend"
            android:label="Item Details (Friend)">
            <intent-filter>
                <action android:name="android.intent.action.ItemDetail_Friend"/>
                <category android:name="android.intent.action.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".SendDeal"
            android:label="Send Deal">
            <intent-filter>
                <action android:name="android.intent.action.SendDeal"/>
                <category android:name="android.intent.action.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
